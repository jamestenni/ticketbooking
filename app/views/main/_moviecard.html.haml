.movieCard 
  = image_tag (movie.poster), style: "width: 100%; height: 360px", class: "mb-3"
  %h5.movieDateIn= movie.get_date_in
  - if movie.name.size <= 44
    %h4.movieName= movie.name
  - else
    %h4.movieName= "#{movie.name[0,44]}..."

  .footermovieCard.d-flex
    .movieType.smallIcon
      %p= movie.movie_type
    .movieDuration.ms-3.smallIcon
      %p= "#{movie.duration} min"

:css
  :root {
    --movie-card-border-radius: 20px;
  }

  .movieCard {
    width: 280px;
    height: 520px;
    border-radius: var(--movie-card-border-radius);
    -# border: 1px solid white;
    position: relative;
    margin: auto;
  }

  .movieCard:hover {
    background-color: #720a00;
  }

  .movieCard img {
    overflow: hidden;
    border-top-left-radius: var(--movie-card-border-radius);
    border-top-right-radius: var(--movie-card-border-radius);
  }

  .movieCard .movieDateIn {
    color: rgb(255, 191, 31);
    padding-left: 0.8rem;
    padding-right: 0.8rem;
  }

  .movieCard .movieName {
    color: white;
    text-shadow: 2px 2px #333333;
    padding-left: 0.8rem;
    padding-right: 0.8rem;
  }

  .movieCard .footermovieCard {
    position: absolute;
    bottom: 0.8rem;
    left: 0.8rem;
  }

  .movieCard .footermovieCard .smallIcon {
    background-color: #d3d3d3;
    border: 1px white solid;
    text-align: center;
    border-radius: 10px;
  }

  .movieCard .footermovieCard .smallIcon p {
    margin-bottom: 0px;
    padding: 0.2rem 0.8rem;
    font-size: 0.7rem;
  }

