= render 'navbar'

.darkBackground.full-lock-screen
  .darkBackgroundContainer.flex-center
    .orderConfirmCard
      %h1{style: "font-size: 60px; color: #95f985"} Your order is completed.
      %p.mt-3{style: "font-size: 20px; color: white"} You can check you tickets in your inventory.
      %div.mt-5{style: "display: flex; justify-content: center"}
        .custom-button.me-5#backMainButton{onclick: "location.href='#{main_page_path}'"} Back to main
        .custom-button.ms-5#goInventoryButton{onclick: "location.href='#{inventory_page_path}'"} Go to inventory 

:css
  .darkBackground .darkBackgroundContainer .orderConfirmCard {
    display: flex;
    flex-direction: column;
    padding: 40px;
    height: 500px;
    width: 800px;
    position: relative;
    top: 0%;
    -# border: 1px white solid;
  }

  .custom-button {
    padding: 10px 35px;
    font-weight: bolder;
    border-radius: 10px;
    border: 0.5px solid #d3d3d3 !important;
    cursor: pointer;
  }

  #backMainButton {
    color: black;
    background-color: #b7ffbf;
  }

  #backMainButton:hover {
    background-color: #4ded30;
  }

  #goInventoryButton {
    color: black;
    background-color: #cffff6;
  }

  #goInventoryButton:hover {
    background-color: #aee7f8;
  }