.container.mt-3 
  %h1 Listing inventories

  %table
    %thead
      %tr
        %th User ID
        %th Username
        %th Product
        %th Quantity
        %th
        %th
        %th

    %tbody
      - @inventories.each do |inventory|
        %tr
          %td= inventory.user.id
          %td= inventory.user.username
          %td= inventory.product.label_product()
          %td= inventory.quantity
          %td= link_to 'Show', inventory
          %td= link_to 'Edit', edit_inventory_path(inventory)
          %td= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Inventory', new_inventory_path
