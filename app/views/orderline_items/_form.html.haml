-# frozen_string_literal: true
= simple_form_for(@orderline_item) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :order, label_method: lambda { |order| "Order id: #{order.id}, Username: #{order.user.username}" }
    = f.association :product, label_method: :label_product
    = f.input :quantity
    = f.input :price

  .form-actions
    = f.button :submit, class: "btn btn-outline-dark my-3 ms-1"
